<a href="/" class="btn btn-secondary mb-3">Back</a>
<form action="/todos/{{{todo.id}}}?_method=PUT" method="POST" class="col-lg-8 mx-auto">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input class="d-inline align-middle" type="checkbox" name="done" id="done" {{#if todo.done}}checked{{/if}}>
      </div>
    </div>
    <input type="text" class="form-control" value="{{{todo.name}}}" name="name" placeholder="name">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">Save</button>
      <button class="btn btn-danger" type="submit" data-toggle="tooltip" data-placement="top" title="Delete"
        onclick="return confirm('Are you sure you want to delete this item?');">delete</button>
    </div>
  </div>
</form>