<a href="/" class="btn btn-secondary mb-3">Back</a>
<form action="/todos/{{{todo.id}}}/delete?_method=DELETE" method="POST">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input class="d-inline align-middle" type="checkbox" name="done" id="done" {{#if todo.done}}checked{{/if}}
          disabled>
      </div>
    </div>
    <input type="text" class="form-control" value="{{{todo.name}}}" disabled>
    <div class="input-group-append">
      <a class="btn btn-info" href="/todos/{{{todo.id}}}/edit?_method=PUT">edit</a>
      <button class="btn btn-danger" type="submit"
        onclick="return confirm('Are you sure you want to delete this item?');">delete</button>
    </div>
  </div>
</form>